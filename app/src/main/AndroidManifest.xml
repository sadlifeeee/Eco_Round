<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ph.edu.dlsu.mobdeve.s17.lee.jerickson.eco_round">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eco_Round"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".filterPopup"
            android:theme="@style/ThemeOverlay.AppCompat.popMe"/>
        <activity
            android:name=".graphActivity"
            android:exported="true" />
        <activity android:name=".forgetPassActivity" />
        <activity android:name=".generateQR" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".ExpenseDetailsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".BudgetActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ExpenseEdit" />
        <activity android:name=".ExpenseAdd" />
    </application>

</manifest>